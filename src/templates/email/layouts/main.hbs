{{!-- templates/email/layouts/main.hbs --}}
<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>{{subject}}</title>
    <style>
        body {
            font-family: Arial, sans-serif;
            line-height: 1.6;
            color: #333;
            max-width: 600px;
            margin: 0 auto;
            padding: 20px;
        }
        .header {
            background-color: #f8f9fa;
            padding: 20px;
            text-align: center;
            margin-bottom: 30px;
        }
        .logo {
            max-width: 150px;
            margin-bottom: 20px;
        }
        .footer {
            margin-top: 30px;
            padding-top: 20px;
            border-top: 1px solid #eee;
            text-align: center;
            font-size: 12px;
            color: #666;
        }
        .button {
            display: inline-block;
            padding: 10px 20px;
            background-color: #ff6b35;
            color: white;
            text-decoration: none;
            border-radius: 5px;
            margin: 20px 0;
        }
    </style>
</head>
<body>
    <div class="header">
        <img src="{{logoUrl}}" alt="Sugandha Logo" class="logo">
    </div>
    
    {{{body}}}
    
    <div class="footer">
        <p>Â© {{currentYear}} Sugandha. All rights reserved.</p>
        <p>This email was sent to {{recipientEmail}}</p>
        <p>
            Address: Dillibazar, Kathmandu, Nepal<br>
            Phone: +977 9811787904
        </p>
    </div>
</body>
</html>


